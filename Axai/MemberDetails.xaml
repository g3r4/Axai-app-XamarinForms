<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Axai.MemberDetails" Title="{Binding SsFieldFullName}"
			  BackgroundColor="#FFFFFF">
	<ScrollView Padding="20">
		<StackLayout VerticalOptions="FillAndExpand" Spacing="10">

			<StackLayout Padding="0,10,0,10">
				<Image Source="http://www.axai.com.mx/sites/default/files/axai%20logo_1.png" HorizontalOptions="Center"/>
			</StackLayout>

			<Image Source="{Binding SsFieldUserPictureFileUrl}" VerticalOptions="FillAndExpand" Aspect="AspectFit"/>
			<Label Text="{Binding SsFieldBioValue}" XAlign="Start" HorizontalOptions="Center" TextColor="Black"/>

			<Button x:Name="twitterButton" Text="Twitter" Clicked="OnButtonClicked" />

			<Button x:Name="drupalButton" Text="Drupal.org" Clicked="OnButtonClicked" />

			<Button x:Name="githubButton" Text="Github" Clicked="OnButtonClicked" />

			<Button x:Name="facebookButton" Text="Facebook" Clicked="OnButtonClicked" />

			<Button x:Name="flickrButton" Text="Flickr" Clicked="OnButtonClicked" />

			<Button x:Name="mailButton" Text="e-Mail" Clicked="OnButtonClicked" />

		</StackLayout>
	</ScrollView>
</ContentPage>